<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.xebialabs.com/deployit/synthetic" xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd" >

    <type type="mattermost.Server" extends="configuration.HttpConnection" label="Mattermost: Hook Definition" >

        <property name="url" label="Mattermost Server URL" description="Mattermost Server URL" required="true" />
        <property name="hook" label="Mattermost Webhook Path" description="Mattermost Incoming WebHook Path (the part after /hooks/)" required="true" />
        <property name="scriptLocation" hidden="true" default="configuration/HttpConnectionCheck.py" />
        <property name="checkConfigurationPath" hidden="true" default="/" />
<!--    <property name="checkConfigurationContentType" hidden="true" default="application/json" /> -->

    </type>

    <type type="mattermost.Notification" extends="xlrelease.PythonScript">

        <!-- Plugin -->
        <property name="iconLocation" hidden="true" default="mattermost/logo.png" />
        <property name="taskColor" hidden="true" default="#000000" />

        <!-- Inputs -->
        <property name="server" category="input" label="Server" description="The Mattermost hook definition to use" required="true" referenced-type="mattermost.Server" kind="ci" />
        <property name="message" category="input" label="Message" description="The notification message text. This message can contain emojis in colon notation." required="true" />

    </type>

</synthetic>
